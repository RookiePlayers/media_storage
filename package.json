{
  "name": "universal_media_storage",
  "version": "1.5.0",
  "description": "A media storage helper, allowing storage to firebase storage, cloudflare r2, aws s2 and more buckets.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles --logHeapUsage --coverage",
    "test:watch": "jest --watch",
    "postinstall": "npx husky install",
    "prepare": "npm run build",
    "build": "tsup",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RookiePlayers/media_storage.git"
  },
  "keywords": [
    "storage",
    "blob",
    "buckets",
    "media"
  ],
  "author": "Olamide Ogunlade",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RookiePlayers/media_storage/issues"
  },
  "homepage": "https://github.com/RookiePlayers/media_storage#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/s3-request-presigner": "^3.922.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "commitlint": "^20.1.0",
    "dotenv": "^17.2.3",
    "eslint-plugin-unused-imports": "^4.3.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^164.1.0",
    "stream": "^0.0.3",
    "typescript-eslint": "^8.46.3"
  }
}
